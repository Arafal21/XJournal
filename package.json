{
    "name": "xjournal",
    "workspaces": [
        "front-end",
        "back-end",
        "backend-cli"
    ],
    "dependencies": {
        "cp": "^0.2.0",
        "module-alias": "^2.2.3",
        "motion": "^12.7.2",
        "next": "^15.1.5",
        "npm-run-all": "^4.1.5"
    },
    "scripts": {
        "reset": "cp \"./back-end/backup/original_db.json\" ./back-end/db.json",
        "front-end": "npm run dev --workspace=front-end",
        "back-end": "npm run dev --workspace=back-end",
        "cli": "npm run dev --workspace=backend-cli",
        "dev": "npm-run-all --parallel front-end back-end"
    },
    "devDependencies": {
        "dotenv": "^17.0.1"
    }
}
