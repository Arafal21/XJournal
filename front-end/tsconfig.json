{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"incremental": true,
		"esModuleInterop": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"playwright.config.ts",
		"src",
		".next/types/**/*.ts",
		"**/*.d.ts"
, "tests/e2e/LoginPage/student/loginTest.spec.js"		// "**/*.d.ts" - this line above helps that the false error about bad import scss styles to the .tsx files declaration is not displayed
	],
	"exclude": ["node_modules"]
}
